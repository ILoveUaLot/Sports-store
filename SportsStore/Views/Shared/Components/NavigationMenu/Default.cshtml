@model CategoryRouteDataModel

<div class="d-grid gap-2">
    <a class=" btn btn-outline-secondary" asp-action="Index"
        asp-controller="Home" asp-route-category="">Home
    </a>

    @foreach (string category in Model?.Categories ?? Enumerable.Empty<string>())
    {
        <a class="btn @(category == (string?)Model?.RoutePath ? "btn-primary" 
                                                                : "btn-outline-secondary")"
            asp-action="Index" asp-controller="Home"
            asp-route-category="@category"
            asp-route-productPage="1">
            @category
        </a>
    }
</div>